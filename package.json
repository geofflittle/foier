{
    "name": "foier",
    "version": "1.0.0",
    "main": "lib/app.ts",
    "repository": "git@github.com:geofflittle/foier.git",
    "author": "Geoff Little <g.little712@gmail.com>",
    "license": "MIT",
    "scripts": {
        "clean": "rm -rf ./dist ./cdk.out",
        "lint": "eslint --fix --max-warnings 0 '**/*.{js,ts}'",
        "format": "prettier --write '**/*.{md,js,json,ts,yaml}'",
        "backend:build": "tsc",
        "infra:deploy": "cdk deploy",
        "deploy": "yarn clean && yarn backend:build && yarn infra:deploy"
    },
    "husky": {
        "hooks": {
            "pre-push": "yarn lint && yarn format"
        }
    },
    "devDependencies": {
        "@aws-cdk/aws-apigateway": "^1.48.0",
        "@aws-cdk/aws-lambda": "^1.48.0",
        "@aws-cdk/core": "^1.48.0",
        "@types/aws-lambda": "^8.10.57",
        "@types/node": "^14.0.14",
        "@typescript-eslint/eslint-plugin": "^3.5.0",
        "@typescript-eslint/parser": "^3.5.0",
        "eslint": "^7.3.1",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.2.5",
        "prettier": "^2.0.5",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.6"
    }
}
